{{!-- CSS spécifique pour le chiffrement par substitution --}}
<link rel="stylesheet" href="/css/substitution_attaque.css">

<div class="substitution-container">
    <section class="tool-section">
        <div class="container">
            <h2 class="section-title">Déchiffrement par Substitution</h2>
            
            <div class="main-grid">
                {{!-- Rangée 1: Table de Substitution --}}
                <div class="substitution-section">
                    <div class="section-header">
                        <h3>Table de Substitution</h3>
                        <div class="table-controls">
                            <button id="generateRandom" class="btn btn-generate">
                                <i class="fas fa-dice"></i>
                                Aléatoire
                            </button>
                            <button class="key-btn compact" data-key="identity">
                                <i class="fas fa-equals"></i>
                                Identité
                            </button>
                            <button class="key-btn compact" data-key="reverse">
                                <i class="fas fa-exchange-alt"></i>
                                Inversé
                            </button>
                            <button class="key-btn compact" data-key="atbash">
                                <i class="fas fa-mirror"></i>
                                Atbash
                            </button>
                        </div>
                    </div>
                    
                    <div class="table-content">
                        <div class="horizontal-table">
                            <!-- Rangée des lettres originales -->
                            <div class="table-row original-row">
                                <div class="row-label">Original :</div>
                                <div class="letters-container" id="originalLetters">
                                    <!-- Généré par JavaScript -->
                                </div>
                            </div>
                            
                            <!-- Rangée des flèches -->
                            <div class="table-row arrows-row">
                                <div class="row-label"></div>
                                <div class="arrows-container" id="arrowsContainer">
                                    <!-- Généré par JavaScript -->
                                </div>
                            </div>
                            
                            <!-- Rangée des lettres substituées -->
                            <div class="table-row substitution-row">
                                <div class="row-label">Substitué :</div>
                                <div class="inputs-container" id="substitutionInputs">
                                    <!-- Généré par JavaScript -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- Rangée 2: Chiffrement --}}
                <div class="cipher-section">
                    <div class="cipher-content">
                        <div class="text-input-area">
                            <h3>Texte à chiffrer</h3>
                            <textarea id="inputText" placeholder="Entrez votre texte..." rows="5"></textarea>
                            
                            <div class="input-actions">
                                <button id="clearText" class="btn btn-secondary compact">
                                    <i class="fas fa-eraser"></i>
                                    Effacer
                                </button>
                                <button id="pasteText" class="btn btn-secondary compact">
                                    <i class="fas fa-paste"></i>
                                    Coller
                                </button>
                            </div>
                        </div>

                        <div class="transform-area">
                            <div class="transform-indicator">
                                <i class="fas fa-arrow-right transform-arrow"></i>
                                <span class="transform-label">Chiffrement</span>
                            </div>
                        </div>

                        <div class="text-output-area">
                            <h3>Texte chiffré</h3>
                            <div class="output-container">
                                <textarea id="outputText" readonly rows="5"></textarea>
                                <button id="copyResult" class="copy-btn" title="Copier">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                            
                            <div class="output-actions">
                                <button id="copyToClipboard" class="btn btn-success compact">
                                    <i class="fas fa-clipboard"></i>
                                    Copier
                                </button>
                                <div class="stats">
                                    <span id="inputLength">0</span> caractères → 
                                    <span id="outputLength">0</span> caractères
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{{!-- JavaScript --}}
<script src="/js/flask.js"></script>
<script src="/js/substitution_attaque.js"></script>
