{{!-- CSS spécifique pour le chiffrement par substitution --}}
<link rel="stylesheet" href="/css/substitution_attaque.css">

<div class="substitution-container">
    <section class="tool-section">
        <div class="container">
            <h2 class="section-title"><i class="fas fa-crosshairs"></i>  Attaque par Substitution</h2>
            <div class="main-grid">
                {{!-- Colonne 1: Zone de saisie du texte chiffré --}}
                <div class="input-section">
                    <div class="input-content">
                        <div class="main-input-area">
                            <div class="input-actions">
                                <button id="clearText" class="btn btn-secondary">
                                    <i class="fas fa-eraser"></i>
                                    Effacer
                                </button>
                                <button id="pasteText" class="btn btn-secondary">
                                    <i class="fas fa-paste"></i>
                                    Coller
                                </button>
                                <button id="loadExample" class="btn btn-secondary">
                                    <i class="fas fa-file-import"></i>
                                    Exemple
                                </button>
                            </div>
                            
                            <div class="textarea-container">
                                <textarea id="inputText" placeholder="Entrez votre texte chiffré ici... 

L'analyse de fréquences nécessite au minimum 50 caractères pour des résultats fiables." rows="8"></textarea>
                            </div>
                            
                            <div class="input-stats">
                                <div class="stats-item">
                                    <i class="fas fa-sort-numeric-up"></i>
                                    <span>Caractères: <strong id="inputLength">0</strong></span>
                                </div>
                                <div class="stats-item">
                                    <i class="fas fa-font"></i>
                                    <span>Lettres: <strong id="letterCount">0</strong></span>
                                </div>
                                <div class="stats-item">
                                    <i class="fas fa-percentage"></i>
                                    <span>Uniques: <strong id="uniqueLetters">0</strong></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- Colonne 2: Bouton d'attaque --}}
                <div class="attack-section">
                        <div class="attack-launch">
                            <div class="attack-button-container">
                                <button id="launchAttack" class="btn-attack" disabled>
                                    <div class="attack-icon">
                                        <i class="fas fa-rocket"></i>
                                    </div>
                                    <div class="attack-text">
                                        <span class="attack-title">LANCER L'ATTAQUE</span>
                                        <span class="attack-subtitle">Analyse de Fréquences</span>
                                    </div>
                                </button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </section>
</div>

{{!-- JavaScript --}}
<script src="/js/flask.js"></script>
<script src="/js/substitution_attaque.js"></script>
