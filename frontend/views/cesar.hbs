{{!-- CSS spécifique pour le chiffrement de César --}}
<link rel="stylesheet" href="/css/cesar.css">
<div class="cesar-page">
<div class="cesar-container">
        {{!-- Section Outil Interactif --}}
        <section class="tool-section">
            <div class="container">
                <h2 class="section-title">Outil de Chiffrement/Déchiffrement</h2>
                
                <div class="tool-container">
                    {{!-- Roue rotative et contrôles --}}
                    <div class="controls-section">
                        <div class="wheel-container">
                            <h3>Roue de Chiffrement</h3>
                            <div class="caesar-wheel">
                                <div class="wheel-outer" id="wheelOuter">
                                    {{!-- Alphabet extérieur (fixe) --}}
                                    <div class="wheel-letters outer-letters">
                                        <span class="letter" data-index="0">A</span>
                                        <span class="letter" data-index="1">B</span>
                                        <span class="letter" data-index="2">C</span>
                                        <span class="letter" data-index="3">D</span>
                                        <span class="letter" data-index="4">E</span>
                                        <span class="letter" data-index="5">F</span>
                                        <span class="letter" data-index="6">G</span>
                                        <span class="letter" data-index="7">H</span>
                                        <span class="letter" data-index="8">I</span>
                                        <span class="letter" data-index="9">J</span>
                                        <span class="letter" data-index="10">K</span>
                                        <span class="letter" data-index="11">L</span>
                                        <span class="letter" data-index="12">M</span>
                                        <span class="letter" data-index="13">N</span>
                                        <span class="letter" data-index="14">O</span>
                                        <span class="letter" data-index="15">P</span>
                                        <span class="letter" data-index="16">Q</span>
                                        <span class="letter" data-index="17">R</span>
                                        <span class="letter" data-index="18">S</span>
                                        <span class="letter" data-index="19">T</span>
                                        <span class="letter" data-index="20">U</span>
                                        <span class="letter" data-index="21">V</span>
                                        <span class="letter" data-index="22">W</span>
                                        <span class="letter" data-index="23">X</span>
                                        <span class="letter" data-index="24">Y</span>
                                        <span class="letter" data-index="25">Z</span>
                                        <span class="letter" data-index="26">__</span>
                                        <span class="letter" data-index="27">,</span>
                                        <span class="letter" data-index="28">.</span>
                                    </div>
                                </div>
                                
                                <div class="wheel-inner" id="wheelInner">
                                    {{!-- Alphabet intérieur (rotatif) --}}
                                    <div class="wheel-letters inner-letters">
                                        <span class="letter" data-index="0">A</span>
                                        <span class="letter" data-index="1">B</span>
                                        <span class="letter" data-index="2">C</span>
                                        <span class="letter" data-index="3">D</span>
                                        <span class="letter" data-index="4">E</span>
                                        <span class="letter" data-index="5">F</span>
                                        <span class="letter" data-index="6">G</span>
                                        <span class="letter" data-index="7">H</span>
                                        <span class="letter" data-index="8">I</span>
                                        <span class="letter" data-index="9">J</span>
                                        <span class="letter" data-index="10">K</span>
                                        <span class="letter" data-index="11">L</span>
                                        <span class="letter" data-index="12">M</span>
                                        <span class="letter" data-index="13">N</span>
                                        <span class="letter" data-index="14">O</span>
                                        <span class="letter" data-index="15">P</span>
                                        <span class="letter" data-index="16">Q</span>
                                        <span class="letter" data-index="17">R</span>
                                        <span class="letter" data-index="18">S</span>
                                        <span class="letter" data-index="19">T</span>
                                        <span class="letter" data-index="20">U</span>
                                        <span class="letter" data-index="21">V</span>
                                        <span class="letter" data-index="22">W</span>
                                        <span class="letter" data-index="23">X</span>
                                        <span class="letter" data-index="24">Y</span>
                                        <span class="letter" data-index="25">Z</span>
                                        <span class="letter" data-index="26">__</span>
                                        <span class="letter" data-index="27">,</span>
                                        <span class="letter" data-index="28">.</span>
                                    </div>
                                    
                                    {{!-- Cercle central décoratif --}}
                                    <div class="wheel-center"></div>
                                    
                                    {{!-- Poignée de rotation --}}
                                    <div class="wheel-handle" id="wheelHandle">
                                        <i class="fas fa-arrows-rotate"></i>
                                    </div>
                                </div>
                                
                                {{!-- Indicateur de correspondance --}}
                                <div class="wheel-indicator">
                                    <div class="indicator-line"></div>
                                    <div class="indicator-text">
                                        <div class="correspondence">
                                            <span id="originalLetter" class="original-letter">A</span> 
                                            <span class="arrow">→</span> 
                                            <span id="cipherLetter" class="cipher-letter">A</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="wheel-info">
                                <div class="current-shift">
                                    Décalage: <span id="currentShift">0</span>
                                </div>
                            </div>
                        </div>

                        <div class="text-areas">
                        {{!-- Boutons d'action --}}
                            <div class="action-buttons">
                                <button id="clearText" class="delete-button">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 69 14" class="svgIcon bin-top">
